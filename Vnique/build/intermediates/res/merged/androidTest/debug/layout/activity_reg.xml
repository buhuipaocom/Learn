<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_bg_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/tab_bg" >

        <ImageView
            android:id="@+id/backImg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="注册"
            android:textColor="#ff0000aa"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@color/list_normal_color" >

            <EditText
                android:id="@+id/usernameET"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:gravity="center"
                android:hint="用户名"
                android:padding="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_marginTop="1dp"
            android:background="@color/list_normal_color" >

            <EditText
                android:id="@+id/passwordET"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:gravity="center"
                android:hint="密码"
                android:inputType="textPassword"
                android:padding="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/reg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/listview" >

            <TextView
                android:id="@+id/regTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:padding="10dp"
                android:text="注册"
                android:textColor="@color/red"
                android:textSize="30sp" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout><!-- From: file:/G:/Android/vnique_Android/Vnique/Learn/Vnique/src/main/res/layout/activity_reg.xml --><!-- From: file:/G:/Android/vnique_Android/Vnique/Learn/Vnique/build/intermediates/bundles/debug/res/layout/activity_reg.xml -->